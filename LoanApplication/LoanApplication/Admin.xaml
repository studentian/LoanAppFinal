<Page x:Class="LoanApplication.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoanApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TabControl>
                <TabItem Header="Users">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="50*"/>
                        </Grid.RowDefinitions>

                        <ListView Name="lstUserList" Grid.Column="1" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Username" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Password" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Full name" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Account number" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Email" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Access Level" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView>
                            </ListView.View>

                        </ListView>

                        <StackPanel Name="stkUserDetails" Grid.Row="4" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*"/>
                                    <ColumnDefinition Width="70*"/>

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                </Grid.RowDefinitions>
                                <!---No need to add names as they will not have any interaction-->
                                <Label Grid.Row="0" Grid.Column="0" Content="Username" />
                                <Label Grid.Row="1" Grid.Column="0" Content="Password" />
                                <Label Grid.Row="2" Grid.Column="0" Content="Full name" />
                                <Label Grid.Row="3" Grid.Column="0" Content="Account number" />
                                <Label Grid.Row="4" Grid.Column="0" Content="Email" />
                                <Label Grid.Row="5" Grid.Column="0" Content="Access level" />

                                <TextBox Grid.Row="0" Grid.Column="1" Name="tbxUserName" />
                                <TextBox Grid.Row="1" Grid.Column="1" Name="tbxPassword" />
                                <TextBox Grid.Row="2" Grid.Column="1" Name="tbxFullname" />
                                <TextBox Grid.Row="3" Grid.Column="1" Name="tbxAccountNumber" />
                                <TextBox Grid.Row="4" Grid.Column="1" Name="tbxEmail" />
                                <TextBox Grid.Row="5" Grid.Column="1" Name="tbxAccessLevel" />

                                <ComboBox Grid.Column="2" Grid.Row="5">
                                    <ComboBoxItem Content="Basic"/>
                                    <ComboBoxItem Content="Provider" />

                                </ComboBox>
                                <Button Grid.Row="7" Grid.Column="2" Content="Update" Width="60" Height="30" HorizontalAlignment="Center"></Button>

                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                </TabItem>
                <TabItem Header="Logs">
                    
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Page>
