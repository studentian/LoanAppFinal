<Page x:Class="LoanApplication.Provider"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoanApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Provider">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TabControl>
                <TabItem Header="Users">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="50*"/>
                        </Grid.RowDefinitions>

                        <ListView Name="lstUserList" Grid.Column="1" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Account number" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Full name" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Offer Amount" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Term" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Interest Rate" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Approval" Width="120" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    
                                </GridView>
                            </ListView.View>

                        </ListView>

                        <StackPanel Name="stkUserDetails" Grid.Row="4" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*"/>
                                    <ColumnDefinition Width="70*"/>

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                </Grid.RowDefinitions>
                                <!---No need to add names as they will not have any interaction-->
                                <Label Grid.Row="0" Grid.Column="0" Content="Acount number" />
                                <Label Grid.Row="1" Grid.Column="0" Content="Full name" />
                                <Label Grid.Row="2" Grid.Column="0" Content="Offer Amount" />
                                <Label Grid.Row="3" Grid.Column="0" Content="Term" />
                                <Label Grid.Row="4" Grid.Column="0" Content="Interest Rate" />
                                <Label Grid.Row="5" Grid.Column="0" Content="Approval" />

                                <TextBox Grid.Row="0" Grid.Column="1" Name="tbxAccNum" />
                                <TextBox Grid.Row="1" Grid.Column="1" Name="tbxFullName" />
                                <TextBox Grid.Row="2" Grid.Column="1" Name="tbxOfferAmt" />
                                <TextBox Grid.Row="3" Grid.Column="1" Name="tbxTerm" />
                                <TextBox Grid.Row="4" Grid.Column="1" Name="tbxIntRate" />
                                <TextBox Grid.Row="5" Grid.Column="1" Name="tbxApproval" />

                                <ComboBox Grid.Column="2" Grid.Row="5">
                                    <ComboBoxItem Content="Approved"/>
                                    <ComboBoxItem Content="Rejected" />
                                    <ComboBoxItem Content="Pending" />
                                </ComboBox>
                                
                                
                                <Button Grid.Row="7" Grid.Column="2" Content="Update" Width="60" Height="30" HorizontalAlignment="Center"></Button>

                            </Grid>
                        </StackPanel>
                    </Grid>

                </TabItem>
                <TabItem Header="Logs">

                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Page>
